!!! XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      Retiro Nordestão 2010 - 
      = page.title
    %link(rel="icon" type="image/png" href="/images/theme/favicon.png")
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %meta{:name => 'Description', :content => 'Retiro Nordestão 2010 - Encontro de jovens discípulos do Nordeste'}
    %meta{:name => 'Keywords', :content => 'retiro, retiro nordestão, nordeste, comunhão, jesus, deus, espírito santo, amor, unidade, semelhança de jesus'}
    = juice_css ['default', 'green', 'jquery.jcarousel', 'jquery.lightbox-0.5', 'clients_slider']
  %body#homepage
    #content
      #header
        #top
          %a(href='/')= image_tag 'theme/green/logo.png', :class => 'logo', :alt => 'Retiro Nordestão 2010'
          #navigation
            %ul#nav
              - topic_posts do |post|
                %li{:class => current_page_class(post)}
                  %a{ :href => post.url}= post.title
                  - unless children_posts(post).empty?
                    %ul
                      - children_posts(post) do |children_post|
                        %li
                          %a{ :href => children_post.url }= children_post.title
        = content
    #footer
      .inner
        .left
          Copyright 2009-2010 Retiro Nordestão.
        .right
          %ul
            - topic_posts do |post|
              %li
                %a{ :href => post.url}= post.title
          .clear
      .clear
    = juice_js ['jquery', 'jquery.lightbox-0.5.pack', 'jquery.lightbox.gallery', 'cufon-yui', 'fonts/chunk_400.font', 'fonts/goundy-bookletter_400.font', 'init_cufon', 'jquery.cycle.all', 'init_slideshow', 'google.analytics']
